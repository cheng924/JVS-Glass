<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Android 12+ 权限 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" /> <!-- 蓝牙LE硬件特性 -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".MyApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JVSGlass">
        <activity
            android:name=".activities.teleprompter.TeleprompterNewFileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.teleprompter.TeleprompterDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TranscribeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.JVSAIActivity"
            android:exported="false" />
        <activity
            android:name=".activities.teleprompter.TeleprompterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.NavigateActivity"
            android:exported="false" />
        <activity
            android:name=".activities.QuickNoteActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BluetoothActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SilentModeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BluetoothConnectActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.JVSGlass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>