<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_button">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.051"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.064"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.936"/>

    <LinearLayout
        android:id="@+id/fl_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_right">

        <LinearLayout
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="00:00"
                android:textSize="36sp"
                android:textColor="@android:color/white"/>
            
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="12月31日 星期四"
                android:textSize="11sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp">

            <ImageView
                android:id="@+id/iv_weather"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_weather_sunny"/>

            <TextView
                android:id="@+id/tv_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:text="26°C"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 缩放 -->
    <LinearLayout
        android:id="@+id/ll_scale"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom">

        <LinearLayout
            android:id="@+id/ll_zoom_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginEnd="30dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="距离"
                android:textSize="16sp"
                android:textColor="@color/gray_100"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="0dp">

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1.0m"
                    android:textSize="14sp"
                    android:textColor="@color/gray_100"
                    android:layout_gravity="center_vertical"/>

                <SeekBar
                    android:id="@+id/seek_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:max="8"
                    android:splitTrack="false"
                    android:thumb="@drawable/ic_thumb_horizontal"
                    android:tickMark="@drawable/ic_tick"
                    android:progressTint="@color/gray_52"
                    android:progressTintMode="src_in"
                    android:progressBackgroundTint="@color/gray_52"
                    android:progressBackgroundTintMode="src_in"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_move"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_move"/>
    </LinearLayout>

    <!-- 上下平移 -->
    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:translationY="-5dp"
        android:text="高度"
        android:textSize="16sp"
        android:textColor="@color/gray_100"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <SeekBar
        android:id="@+id/sb_pan_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:translationX="65dp"
        android:translationY="-10dp"
        android:max="12"
        android:progress="6"
        android:splitTrack="false"
        android:thumb="@drawable/ic_thumb_vertical"
        android:tickMark="@drawable/ic_tick"
        android:progressTint="@color/gray_52"
        android:progressTintMode="src_in"
        android:progressBackgroundTint="@color/gray_52"
        android:progressBackgroundTintMode="src_in"
        android:visibility="invisible"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
